{
  "manifest_version": 3,
  "name": "Device Output Switcher",
  "version": "1.0.0",
  "description": "Switch between device output modes (Desktop, Mobile, App) by managing cookies",
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/shared/constants.js",
        "src/content/cookie-manager.js",
        "src/content/storage-manager.js",
        "src/content/ui.js",
        "src/content/content.js"
      ],
      "css": ["src/content/styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
